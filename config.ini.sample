[mesh]
name=Your Mesh Name
short_name=YourMesh
region=Your Mesh Region
description=Serving Meshtastic to your region.
contact=https://yourmesh.org
url=https://yourmesh.org
# Optional: link to your mesh's configuration guide
config_url=https://yourmesh.org/config-instructions
# Optional: link to your mesh's Discord or community chat
discord_url=https://discord.gg/yourdiscord
latitude=0.0
longitude=0.0
channel_key=1PG7OiApB1nwvP+rz05pAQ==
# Optional: path to logo image (leave blank for text-only)
logo_path=/images/logos/logo.webp
# MQTT display settings for user instructions
mqtt_server_display=mqtt.yourmesh.org
mqtt_username_display=meshdev
mqtt_password_display=large4cats
mqtt_root_topic_display=msh/US

[mqtt]
broker=mqtt.yourmesh.org
port=1883
topic=msh/US/#
username=meshdev
password=large4cats

[database]
host=mariadb
username=meshdata
password=passw0rd
database=meshdata

[webserver]
port=8000

[server]
node_activity_prune_threshold=7200
node_location_prune_threshold=86400
render_interval=15
debug=true
timezone=America/Los_Angeles
zero_hop_timeout=43200
telemetry_retention_days = 30
metrics_average_interval=7200

# Flood detection sensitivity settings (optional)
# Uncomment and adjust these values to tune flood detection sensitivity
#flood_threshold=500
#high_volume_threshold=5000
#problem_node_threshold=100
#atak_problem_threshold=50

# Problem aging time windows (optional, in hours)
# Problems older than these windows are ignored in flood detection
#problem_window_atak_drops=2
#problem_window_parse_failures=4
#problem_window_unsupported_types=6
#problem_window_ignored_channels=6
#problem_window_processing_errors=4
#problem_window_raw_messages=1

[channels]
# Comma-separated list of channel names to ignore
#ignored_channels=PKI

[geocoding]
enabled=false
apikey=YOUR_KEY_HERE

[registrations]
# Set to true to enable user registration and node claiming
enabled=false
jwt_secret=YOUR_JWT_SECRET

[smtp]
# Required for user registration - configure when enabling registrations
# Gmail example (recommended):
#email=your-mesh-email@gmail.com
#password=your-gmail-app-password
#server=smtp.gmail.com
#port=587
# Generic example:
email=YOUR_EMAIL_ADDRESS
password=SMTP_PASSWORD
server=SMTP_SERVER
port=SMTP_PORT

[los]
enabled=false
max_distance=10000
cache_duration=43200

[features]
# Show or hide the #MeshtasticMonday page
show_meshtastic_monday=true

[community_links]
# Links to fellow mesh networks
# Format: linkN=URL and linkN_label=Display Name
link1=https://pugetmesh.org
link1_label=PugetMesh (WA)
link2=https://yourmesh.org
link2_label=Fellow Mesh Network
# Add more links as needed (link3, link4, etc.)

[tools]
# External tools shown in the navigation dropdown
# Format: toolN=URL and toolN_label=Display Name
# Leave empty or comment out to hide the tools dropdown entirely
tool1=https://meshmap.net/
tool1_label=MeshMap
tool2=https://yourmesh.org/status
tool2_label=Server Status
tool3=https://yourmesh.org
tool3_label=Community Website
# Add more tools as needed (tool4, tool5, etc.)

# Node-specific external links (shown on individual node pages)
# Use {{ node.id }} for node ID substitution
node_link1=https://meshmap.net/#{{ node.id }}
node_link1_label=MeshMap
node_link2=https://yourmesh.org/map?node_id={{ node.id }}
node_link2_label=Regional Map

[theme]
# Header background color (navbar)
header_color=#9fdef9
# Header brand/title color
header_brand_color=#000
# Header navigation link color
header_link_color=#555
# Header active navigation link color
header_link_active_color=#000
# Accent color (login/logout button, etc.)
accent_color=#17a2b8
# Page background color
page_background_color=#ffffff
# Table header background color
table_header_color=#D7F9FF
# Table subheader background color
table_subheader_color=#e1ebef
# Table border color
table_border_color=#dee2e6
# Table alternating row background color
table_alternating_row_color=#f0f0f0
# Link color
link_color=#007bff
# Link hover color  
link_color_hover=#0056b3
# Control color (buttons, form controls)
control_color=#17a2b8
# Control hover color
control_color_hover=#1396a5
# Chat box background color
chat_box_background_color=#f0f0f0
# Chat box border color (leave empty for no border)
chat_box_border_color=
# Banner background color (e.g. for newest node welcome in nodes page)
banner_background_color=#F9F9D7
# Favicon background color override (optional, falls back to accent_color if not set)
favicon_background_color=
# Favicon logo (stroke) color override (optional, falls back to auto-contrast if not set)
favicon_logo_color=