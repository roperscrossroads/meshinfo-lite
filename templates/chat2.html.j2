{% macro format_duration(seconds) %}
    {%- set s = seconds|int %}
    {%- set m = s // 60 %}
    {%- set s = s % 60 %}
    {%- if m > 0 %}{{ m }}m {% endif %}{{ s }}s
{% endmacro %}