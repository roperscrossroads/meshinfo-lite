{% set this_page = "forgot_password" %}
{% extends "layout.html.j2" %}

{% block title %}Forgot Password | MeshInfo{% endblock %}

{% block head %}
<style>
/* Ensure form input text is black and visible */
.form-control {
    color: #000000 !important;
}

.form-control::placeholder {
    color: #6c757d !important;
}

input[type="email"] {
    color: #000000 !important;
}
</style>
{% endblock %}

{% block content %}
<div class="mt-5 d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h3 class="text-center mb-4">Forgot Password</h3>
        
        {% if error_message %}
        <div class="alert alert-danger" role="alert">
            {{ error_message }}
        </div>
        {% endif %}
        
        {% if success_message %}
        <div class="alert alert-success" role="alert">
            {{ success_message }}
        </div>
        {% else %}
        <form action="{{ url_for('forgot_password') }}" method="POST">            
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" 
                       placeholder="Enter your email address" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
        </form>
        {% endif %}
        
        <div class="mt-3 text-center">
            <a href="{{ url_for("login") }}" class="text-muted">Back to Login</a>
        </div>
    </div>
</div>
{% endblock %}