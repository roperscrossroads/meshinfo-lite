{% set this_page = "login" %}
{% extends "layout.html.j2" %}

{% block title %}Login | MeshInfo{% endblock %}

{% block head %}
<style>
/* Ensure form input text is black and visible */
.form-control {
    color: #000000 !important;
}

.form-control::placeholder {
    color: #6c757d !important;
}

input[type="email"],
input[type="password"],
input[type="text"] {
    color: #000000 !important;
}
</style>
{% endblock %}

{% block content %}
<div class="mt-5 d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h3 class="text-center mb-4">Login</h3>
        <form action="login.html" method="POST">            
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <div class="mt-2"><a href="{{ url_for("register") }}" class="btn btn-info w-100" role="button">Register</a></div>
            <div class="mt-2 text-center">
                <a href="{{ url_for("forgot_password") }}" class="text-primary">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}