                    data: [],
                    borderColor: chartColors.batteryLevel,
                    backgroundColor: chartColors.batteryLevel + '20',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                ...commonOptions,
                scales: {
                    ...commonOptions.scales,
                    y: {
                        ...commonOptions.scales.y,
                        title: {
                            display: true,
