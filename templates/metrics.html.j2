            <!-- <option value="all">All Time</option> -->
        </select>
        <select id="channelFilter" onchange="updateMetrics()">
            <option value="all" selected>All Channels</option>
            {% for channel in Channel %}
                <option value="{{ channel.value }}">{{ utils.get_channel_name(channel.value) }} ({{ channel.value }})</option>
            {% endfor %}
        </select>
        <button class="refresh-button" onclick="refreshData()">Refresh Data</button>
    </div>
</div>

<div class="metrics-grid">
    <div class="chart-container">
        <h2>Nodes Heard</h2>
        <canvas id="nodesOnlineChart"></canvas>
    </div>
    
    <div class="chart-container">
        <h2>Message Traffic</h2>
        <canvas id="messageTrafficChart"></canvas>
    </div>
    
    <div class="chart-container">
        <h2>Channel Utilization</h2>
