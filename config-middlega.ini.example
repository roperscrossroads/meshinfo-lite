[mesh]
name=Middle GA Mesh
short_name=MiddleGA
region=Middle Georgia
description=Serving Meshtastic to Middle Georgia
contact=https://middlegeorgiamesh.org
url=https://middlegeorgiamesh.org
# Optional: link to your mesh's configuration guide
config_url=https://middlegeorgiamesh.org/setup
# Optional: link to your mesh's Discord or community chat
discord_url=https://discord.gg/6cSJ738Prp
latitude=32.8407
longitude=-83.6324
channel_key=1PG7OiApB1nwvP+rz05pAQ==
# Optional: path to logo image (leave blank for text-only)
logo_path=
# MQTT display settings for user instructions
mqtt_server_display=middlegamesh.duckdns.org
mqtt_username_display=meshdev
mqtt_password_display=large4cats
mqtt_root_topic_display=msh/US/GA/middlega

[mqtt]
# Middle GA MQTT Server
broker=middlegamesh.duckdns.org
port=1883
topic=msh/US/GA/middlega/#
username=meshdev
password=large4cats

[database]
host=mariadb
username=meshdata
password=passw0rd
database=meshdata

[webserver]
port=8000

[server]
node_activity_prune_threshold=7200
node_location_prune_threshold=86400
render_interval=15
debug=true
timezone=America/New_York
zero_hop_timeout=43200
telemetry_retention_days=30
metrics_average_interval=7200

[channels]
# Comma-separated list of channel names to ignore
#ignored_channels=PKI

[geocoding]
enabled=false
apikey=YOUR_KEY_HERE

[registrations]
# Set to true to enable user registration and node claiming
enabled=false
jwt_secret=YOUR_JWT_SECRET

[smtp]
# Required for user registration - configure when enabling registrations
# Gmail example (recommended):
#email=middlegamesh.noreply@gmail.com
#password=your-gmail-app-password
#server=smtp.gmail.com
#port=587
# Generic example:
email=YOUR_EMAIL_ADDRESS
password=SMTP_PASSWORD
server=SMTP_SERVER
port=SMTP_PORT

[los]
enabled=false
max_distance=10000
cache_duration=43200

[features]
# Show or hide the #MeshtasticMonday page
show_meshtastic_monday=true

[community_links]
